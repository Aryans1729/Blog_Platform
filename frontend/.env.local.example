# ==================================================
# FRONTEND ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# Note: Only variables prefixed with NEXT_PUBLIC_ are exposed to the browser

# ==================================================
# API CONFIGURATION
# ==================================================
# Backend API URL
# Development
NEXT_PUBLIC_API_URL=http://localhost:3001/api
# Production example:
# NEXT_PUBLIC_API_URL=https://your-api-domain.com/api

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=10000

# ==================================================
# APP CONFIGURATION
# ==================================================
# Application name displayed in the UI
NEXT_PUBLIC_APP_NAME=Personal Blog Platform

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Application description for meta tags
NEXT_PUBLIC_APP_DESCRIPTION=A modern, secure blog platform built with Next.js and TypeScript

# Application URL (for meta tags and sharing)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==================================================
# NOTIFICATION SYSTEM CONFIGURATION
# ==================================================
# Default notification duration in milliseconds
NEXT_PUBLIC_NOTIFICATION_DURATION=4000

# Notification position
# Options: top-left, top-center, top-right, bottom-left, bottom-center, bottom-right
NEXT_PUBLIC_NOTIFICATION_POSITION=top-right

# Maximum number of notifications to show at once
NEXT_PUBLIC_MAX_NOTIFICATIONS=5

# ==================================================
# UI CONFIGURATION
# ==================================================
# Default theme (light, dark, system)
NEXT_PUBLIC_DEFAULT_THEME=system

# Posts per page for pagination
NEXT_PUBLIC_POSTS_PER_PAGE=10

# Maximum post title length
NEXT_PUBLIC_MAX_TITLE_LENGTH=100

# Maximum post content preview length
NEXT_PUBLIC_MAX_PREVIEW_LENGTH=200

# ==================================================
# FEATURE FLAGS
# ==================================================
# Enable/disable features during development
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ==================================================
# ANALYTICS CONFIGURATION (Optional)
# ==================================================
# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager ID
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ==================================================
# SEO CONFIGURATION
# ==================================================
# Default meta keywords
NEXT_PUBLIC_META_KEYWORDS=blog,platform,nextjs,typescript,react

# Default meta author
NEXT_PUBLIC_META_AUTHOR=Your Name

# Open Graph image URL
NEXT_PUBLIC_OG_IMAGE=https://your-domain.com/og-image.jpg

# ==================================================
# SOCIAL MEDIA LINKS (Optional)
# ==================================================
# Social media links for footer/profile
# NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourusername
# NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername
# NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/yourusername

# ==================================================
# DEVELOPMENT CONFIGURATION
# ==================================================
# Enable development features (only works in development mode)
# Show detailed error messages
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ==================================================
# SECURITY CONFIGURATION
# ==================================================
# Content Security Policy settings
# NEXT_PUBLIC_CSP_REPORT_URI=https://your-domain.com/csp-report

# ==================================================
# THIRD-PARTY INTEGRATIONS (Future features)
# ==================================================
# Disqus shortname for comments
# NEXT_PUBLIC_DISQUS_SHORTNAME=your-disqus-shortname

# Stripe public key for payments
# NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_...

# Cloudinary cloud name for image uploads
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
